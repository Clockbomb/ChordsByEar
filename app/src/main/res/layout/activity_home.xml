<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Home">


    <TextView
        android:id="@+id/main_actv_tit"
        android:layout_width="378dp"
        android:layout_height="82dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textview_layout"
        android:fontFamily="@font/bilbo_swash_caps"
        android:gravity="center"
        android:text="Chords by Ear"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLearn"
        android:layout_width="205dp"
        android:layout_height="77dp"
        android:layout_marginTop="100dp"

        android:background="@drawable/big_button_background"
        android:fontFamily="@font/open_sans"
        android:text="Learn"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_actv_tit"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Practise"
        android:layout_width="205dp"
        android:layout_height="77dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/big_button_background"
        android:fontFamily="@font/open_sans"
        android:text="Practise"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_actv_tit"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>